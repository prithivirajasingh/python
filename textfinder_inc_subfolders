import os
import re
import time

pattern = r'(\d{3})-(\d{3})-(\d{4})'
match = None
# st = time.time()
for folders, sfs, files in os.walk(os.getcwd()):
    for item in files:
        if '.txt' in item:
            filename = folders+'/'+item
            with open(filename,'r') as f:
                for eachline in f.readlines():
                    match = re.search(pattern,eachline)
                    if match != None:
                        print(filename)
                        print(match.group())
                        break
        if match != None:
            break
    if match != None:
        break
# et = time.time()
# print(et - st)
